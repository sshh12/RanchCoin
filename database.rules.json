{
  "rules": {
    "users": {
      ".indexOn": ["email", "firstname", "name"],
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "accounts": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": false
      }
    },
    "transactions": {
      "$transID": {
        ".indexOn": ["timestamp"],
        ".write": "!data.exists() && auth.uid === newData.child('sender').val()",
        ".read": "auth.uid === data.child('sender').val() || auth.uid === data.child('receiver').val()",
        ".validate": "newData.child('amount').isNumber() && newData.child('amount').val() > 0 && (newData.child('type').val() == 'request' || root.child('accounts').child(auth.uid).child('balance').val() > newData.child('amount').val()) && auth.uid != data.child('receiver').val()"
      }
    }
  }
}
