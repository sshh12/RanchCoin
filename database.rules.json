{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid",
        ".validate": "!newData.child('balance').exists() || (!data.child('balance').exists() && newData.child('balance').val() === 0)"
      }
    },
    "transactions": {
      "$transID": {
        ".indexOn": ["timestamp"],
        ".write": "!data.exists() && auth.uid === newData.child('sender').val()",
        ".read": "auth.uid === data.child('sender').val() || auth.uid === data.child('receiver').val()",
        ".validate": "newData.child('amount').isNumber() && newData.child('amount').val() > 0 && auth.uid != data.child('receiver').val()"
      }
    }
  }
}
